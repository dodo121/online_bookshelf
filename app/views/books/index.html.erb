<center><h1>List of all the books</h1></center>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Cover</th>
      <th>Options</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= image_tag book.cover.url(:thumb) %></td>
          <% if user_signed_in? %>
            <td><%= link_to 'Get this book',  get_book_book_path(book), method: :post, class: "btn btn-info" %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Destroy', book, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Edit', edit_book_path(book),  class: "btn btn-inverse" %></td>
            <% end %>
            <% else %>
            <td> Please sign in </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
   