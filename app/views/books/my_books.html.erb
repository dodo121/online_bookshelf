<h1>My books</h1>
<br>
<table class="table table-bordered">
	<thead>
		<tr>
		<th>Name</th>
		<th>Author</th>
		<th>Cover</th>
		<th>Options</th>
	</tr>
	</thead>
<tbody>
	<% @user_books.each do |book| %>
<tr>
<td><%= book.name %></td>
<td><%= book.author %></td>
<td><%= image_tag book.cover.url(:thumb) %></td>
<td><%= link_to "Delete", delete_my_book_book_path(book), method: "delete", class: 'btn btn-danger'%></td>
<% end %>
</tr>
</table>
</tbody>
</br>
